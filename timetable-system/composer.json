{
    "name": "timetable-system/core",
    "description": "Schedule Time Table Management System",
    "type": "project",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "includes/classes/",
            "App\\Controllers\\": "controllers/",
            "App\\Models\\": "models/",
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests/Unit"
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}